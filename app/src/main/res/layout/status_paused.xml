<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:background="@drawable/paused_background"
                android:visibility="visible"
                android:padding="10dp"
                android:onClick="resumeRapidProApp">

    <io.im3nsa.canalandroid.ui.IconTextView
            android:id="@+id/paused_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:text="@string/icon_bubble_dots"
            android:textColor="@color/font_orange"
            android:textSize="25dp"/>

    <TextView
            android:id="@+id/paused_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/paused_icon"
            android:text="@string/rapidpro_paused"
            android:layout_marginLeft="5dp"
            android:textColor="@color/font_orange"
            android:textStyle="bold"
            android:textSize="20dp"/>

    <TextView
            android:id="@+id/paused_message"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/paused_title"
            android:layout_alignParentLeft="true"
            android:textColor="@color/font_black"
            android:text="@string/paused_message"
            android:layout_marginTop="5dp"
            android:textSize="16dp"/>

</RelativeLayout>
